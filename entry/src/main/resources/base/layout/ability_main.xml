<?xml version="1.0" encoding="utf-8"?>
<DirectionalLayout
    xmlns:ohos="http://schemas.huawei.com/res/ohos"
    ohos:height="match_parent"
    ohos:width="match_parent"
    ohos:orientation="vertical"
    ohos:padding="32">

    <ScrollView
        ohos:height="match_parent"
        ohos:width="match_parent">

        <DirectionalLayout
            ohos:height="match_content"
            ohos:width="match_parent"
            ohos:orientation="vertical">

            <Button
                ohos:id="$+id:btn_requestLocationCallback"
                ohos:height="match_content"
                ohos:width="match_content"
                ohos:background_element="#FF51A8DD"
                ohos:layout_alignment="horizontal_center"
                ohos:margin="5vp"
                ohos:padding="10vp"
                ohos:text="RequestLocationWithCallback"
                ohos:text_size="25"/>

            <Button
                ohos:id="$+id:btn_requestLocationIntent"
                ohos:height="match_content"
                ohos:width="match_parent"
                ohos:background_element="#FF51A8DD"
                ohos:enabled="false"
                ohos:layout_alignment="horizontal_center"
                ohos:margin="5vp"
                ohos:padding="10vp"
                ohos:text="requestLocationIntent"
                ohos:text_size="25"
                ohos:visibility="hide"/>

            <Button
                ohos:id="$+id:btn_getLastLocation"
                ohos:height="match_content"
                ohos:width="match_parent"
                ohos:background_element="#FF51A8DD"
                ohos:layout_alignment="horizontal_center"
                ohos:margin="5vp"
                ohos:padding="10vp"
                ohos:text="GetLastLocation"
                ohos:text_size="25"/>

            <Button
                ohos:id="$+id:btn_getLocationAvailability"
                ohos:height="match_content"
                ohos:width="match_parent"
                ohos:background_element="#FF51A8DD"
                ohos:layout_alignment="horizontal_center"
                ohos:margin="5vp"
                ohos:padding="10vp"
                ohos:text="GetLocationAvailability"
                ohos:text_size="25"/>

            <Button
                ohos:id="$+id:btn_checkSetting"
                ohos:height="match_content"
                ohos:width="match_parent"
                ohos:background_element="#FF51A8DD"
                ohos:layout_alignment="horizontal_center"
                ohos:margin="5vp"
                ohos:padding="10vp"
                ohos:text="CheckSetting"
                ohos:text_size="25"/>
        </DirectionalLayout>
    </ScrollView>
</DirectionalLayout>