<DirectionalLayout
    xmlns:ohos="http://schemas.huawei.com/res/ohos"
    ohos:height="match_parent"
    ohos:width="match_parent"
    ohos:orientation="vertical"
    ohos:padding="32">

    <ScrollView
        ohos:height="match_parent"
        ohos:width="match_parent"
        >

        <DirectionalLayout
            ohos:height="match_content"
            ohos:width="match_parent"
            ohos:orientation="vertical">

            <Button
                ohos:id="$+id:btn_switch_geocoder"
                ohos:height="match_content"
                ohos:width="match_parent"
                ohos:background_element="#FF51A8DD"
                ohos:layout_alignment="horizontal_center"
                ohos:margin="5vp"
                ohos:padding="10vp"
                ohos:text="SwitchGeocoder"
                ohos:text_size="25"/>

            <DirectionalLayout
                ohos:id="$+id:reverseGeoCode_layout"
                ohos:height="match_content"
                ohos:width="match_parent"
                ohos:orientation="vertical">

                <Button
                    ohos:id="$+id:btn_get_from_location"
                    ohos:height="match_content"
                    ohos:width="match_parent"
                    ohos:background_element="#FF51A8DD"
                    ohos:layout_alignment="horizontal_center"
                    ohos:margin="5vp"
                    ohos:padding="10vp"
                    ohos:text="GetFromLocation"
                    ohos:text_size="25"/>

                <DirectionalLayout
                    ohos:height="match_content"
                    ohos:width="match_parent"
                    ohos:orientation="horizontal">

                    <Text
                        ohos:height="match_parent"
                        ohos:width="0vp"
                        ohos:weight="1"
                        ohos:padding="5vp"
                        ohos:text="latitude:"
                        />

                    <TextField
                        ohos:id="$+id:latitude_field"
                        ohos:height="match_parent"
                        ohos:width="0vp"
                        ohos:weight="1"
                        ohos:padding="5vp"
                        ohos:hint="latitude"
                        ohos:layout_alignment="horizontal_center"
                        ohos:text="39.985071"
                        ohos:text_size="25"
                        />
                </DirectionalLayout>

                <Component
                    ohos:height="1vp"
                    ohos:width="match_content"
                    ohos:background_element="#FF888888"/>

                <DirectionalLayout
                    ohos:height="match_content"
                    ohos:width="match_parent"
                    ohos:orientation="horizontal">

                    <Text
                        ohos:height="match_parent"
                        ohos:width="0vp"
                        ohos:weight="1"
                        ohos:padding="5vp"
                        ohos:text="longitude:"
                        />

                    <TextField
                        ohos:id="$+id:longitude_field"
                        ohos:height="match_parent"
                        ohos:width="0vp"
                        ohos:weight="1"
                        ohos:padding="5vp"
                        ohos:hint="longitude"
                        ohos:layout_alignment="horizontal_center"
                        ohos:text="116.501717"
                        ohos:text_size="25"
                        />
                </DirectionalLayout>

                <Component
                    ohos:height="1vp"
                    ohos:width="match_content"
                    ohos:background_element="#FF888888"/>

                <DirectionalLayout
                    ohos:height="match_content"
                    ohos:width="match_parent"
                    ohos:orientation="horizontal">

                    <Text
                        ohos:height="match_parent"
                        ohos:width="0vp"
                        ohos:weight="1"
                        ohos:padding="5vp"
                        ohos:text="maxResults:"
                        />

                    <TextField
                        ohos:id="$+id:maxResults_field"
                        ohos:height="match_parent"
                        ohos:width="0vp"
                        ohos:weight="1"
                        ohos:padding="5vp"
                        ohos:hint="maxResults"
                        ohos:layout_alignment="horizontal_center"
                        ohos:text="5"
                        ohos:text_size="25"
                        />
                </DirectionalLayout>

                <Component
                    ohos:height="1vp"
                    ohos:width="match_content"
                    ohos:background_element="#FF888888"/>

                <DirectionalLayout
                    ohos:height="match_content"
                    ohos:width="match_parent"
                    ohos:orientation="horizontal">

                    <Text
                        ohos:height="match_parent"
                        ohos:width="0vp"
                        ohos:weight="1"
                        ohos:padding="5vp"
                        ohos:text="language:"
                        />

                    <TextField
                        ohos:id="$+id:language_field"
                        ohos:height="match_parent"
                        ohos:width="0vp"
                        ohos:weight="1"
                        ohos:padding="5vp"
                        ohos:hint="language"
                        ohos:layout_alignment="horizontal_center"
                        ohos:text="zh"
                        ohos:text_size="25"
                        />
                </DirectionalLayout>

                <Component
                    ohos:height="1vp"
                    ohos:width="match_content"
                    ohos:background_element="#FF888888"/>

                <DirectionalLayout
                    ohos:height="match_content"
                    ohos:width="match_parent"
                    ohos:orientation="horizontal">

                    <Text
                        ohos:height="match_parent"
                        ohos:width="0vp"
                        ohos:weight="1"
                        ohos:padding="5vp"
                        ohos:text="country:"
                        />

                    <TextField
                        ohos:id="$+id:country_field"
                        ohos:height="match_parent"
                        ohos:width="0vp"
                        ohos:weight="1"
                        ohos:padding="5vp"
                        ohos:hint="country"
                        ohos:layout_alignment="horizontal_center"
                        ohos:text="CN"
                        ohos:text_size="25"
                        />
                </DirectionalLayout>

                <Component
                    ohos:height="1vp"
                    ohos:width="match_parent"
                    ohos:background_element="#FF888888"/>
            </DirectionalLayout>

            <DirectionalLayout
                ohos:id="$+id:geocoder_layout"
                ohos:height="match_content"
                ohos:width="match_parent"
                ohos:orientation="vertical"
                ohos:visibility="hide">

                <Button
                    ohos:id="$+id:btn_get_from_location_name"
                    ohos:height="match_content"
                    ohos:width="match_parent"
                    ohos:background_element="#FF51A8DD"
                    ohos:layout_alignment="horizontal_center"
                    ohos:margin="5vp"
                    ohos:padding="10vp"
                    ohos:text="GetFromLocationName"
                    ohos:text_size="25"/>

                <DirectionalLayout
                    ohos:height="match_content"
                    ohos:width="match_parent"
                    ohos:orientation="horizontal">

                    <Text
                        ohos:height="match_parent"
                        ohos:width="0vp"
                        ohos:weight="1"
                        ohos:padding="5vp"
                        ohos:text="locationName:"
                        />

                    <TextField
                        ohos:id="$+id:geocoder_location_name_field"
                        ohos:height="match_parent"
                        ohos:width="0vp"
                        ohos:weight="1"
                        ohos:padding="5vp"
                        ohos:hint="location name"
                        ohos:layout_alignment="horizontal_center"
                        ohos:text=""
                        ohos:text_size="25"
                        />
                </DirectionalLayout>

                <Component
                    ohos:height="1vp"
                    ohos:width="match_parent"
                    ohos:background_element="#FF888888"/>

                <DirectionalLayout
                    ohos:height="match_content"
                    ohos:width="match_parent"
                    ohos:orientation="horizontal">

                    <Text
                        ohos:height="match_parent"
                        ohos:width="0vp"
                        ohos:weight="1"
                        ohos:padding="5vp"
                        ohos:text="maxResults:"
                        />

                    <TextField
                        ohos:id="$+id:geocoder_maxResults_field"
                        ohos:height="match_parent"
                        ohos:width="0vp"
                        ohos:weight="1"
                        ohos:padding="5vp"
                        ohos:hint="maxResults"
                        ohos:layout_alignment="horizontal_center"
                        ohos:text="10"
                        ohos:text_size="25"
                        />
                </DirectionalLayout>

                <Component
                    ohos:height="1vp"
                    ohos:width="match_parent"
                    ohos:background_element="#FF888888"/>

                <DirectionalLayout
                    ohos:height="match_content"
                    ohos:width="match_parent"
                    ohos:orientation="horizontal">

                    <Text
                        ohos:height="match_parent"
                        ohos:width="0vp"
                        ohos:weight="1"
                        ohos:padding="5vp"
                        ohos:text="language:"
                        />

                    <TextField
                        ohos:id="$+id:geocoder_language_field"
                        ohos:height="match_parent"
                        ohos:width="0vp"
                        ohos:weight="1"
                        ohos:padding="5vp"
                        ohos:hint="language"
                        ohos:layout_alignment="horizontal_center"
                        ohos:text="zh"
                        ohos:text_size="25"
                        />
                </DirectionalLayout>

                <Component
                    ohos:height="1vp"
                    ohos:width="match_parent"
                    ohos:background_element="#FF888888"/>

                <DirectionalLayout
                    ohos:height="match_content"
                    ohos:width="match_parent"
                    ohos:orientation="horizontal">

                    <Text
                        ohos:height="match_parent"
                        ohos:width="0vp"
                        ohos:weight="1"
                        ohos:padding="5vp"
                        ohos:text="country:"
                        />

                    <TextField
                        ohos:id="$+id:geocoder_country_field"
                        ohos:height="match_parent"
                        ohos:width="0vp"
                        ohos:weight="1"
                        ohos:padding="5vp"
                        ohos:hint="country"
                        ohos:layout_alignment="horizontal_center"
                        ohos:text="CN"
                        ohos:text_size="25"
                        />
                </DirectionalLayout>

                <Component
                    ohos:height="1vp"
                    ohos:width="match_parent"
                    ohos:background_element="#FF888888"/>

                <DirectionalLayout
                    ohos:height="match_content"
                    ohos:width="match_parent"
                    ohos:orientation="horizontal">

                    <Text
                        ohos:height="match_parent"
                        ohos:width="0vp"
                        ohos:weight="1.7"
                        ohos:padding="5vp"
                        ohos:text="lowerLeftLatitude:"
                        />

                    <TextField
                        ohos:id="$+id:lower_left_latitude_field"
                        ohos:height="match_parent"
                        ohos:width="0vp"
                        ohos:weight="1"
                        ohos:padding="5vp"
                        ohos:hint="0"
                        ohos:layout_alignment="horizontal_center"
                        ohos:text="0"
                        ohos:text_size="25"
                        />
                </DirectionalLayout>

                <Component
                    ohos:height="1vp"
                    ohos:width="match_parent"
                    ohos:background_element="#FF888888"/>

                <DirectionalLayout
                    ohos:height="match_content"
                    ohos:width="match_parent"
                    ohos:orientation="horizontal">

                    <Text
                        ohos:height="match_parent"
                        ohos:width="0vp"
                        ohos:weight="1.7"
                        ohos:padding="5vp"
                        ohos:text="lowerLeftLongitude:"
                        />

                    <TextField
                        ohos:id="$+id:lower_left_longitude_field"
                        ohos:height="match_parent"
                        ohos:width="0vp"
                        ohos:weight="1"
                        ohos:padding="5vp"
                        ohos:hint="0"
                        ohos:layout_alignment="horizontal_center"
                        ohos:text="0"
                        ohos:text_size="25"
                        />
                </DirectionalLayout>

                <Component
                    ohos:height="1vp"
                    ohos:width="match_parent"
                    ohos:background_element="#FF888888"/>

                <DirectionalLayout
                    ohos:height="match_content"
                    ohos:width="match_parent"
                    ohos:orientation="horizontal">

                    <Text
                        ohos:height="match_parent"
                        ohos:width="0vp"
                        ohos:weight="1.7"
                        ohos:padding="5vp"
                        ohos:text="upperRightLatitude:"
                        />

                    <TextField
                        ohos:id="$+id:upper_right_latitude_field"
                        ohos:height="match_parent"
                        ohos:width="0vp"
                        ohos:weight="1"
                        ohos:padding="5vp"
                        ohos:hint="0"
                        ohos:layout_alignment="horizontal_center"
                        ohos:text="0"
                        ohos:text_size="25"
                        />
                </DirectionalLayout>

                <Component
                    ohos:height="1vp"
                    ohos:width="match_parent"
                    ohos:background_element="#FF888888"/>

                <DirectionalLayout
                    ohos:height="match_content"
                    ohos:width="match_parent"
                    ohos:orientation="horizontal">

                    <Text
                        ohos:height="match_parent"
                        ohos:width="0vp"
                        ohos:weight="2"
                        ohos:padding="5vp"
                        ohos:text="upperRightLongitude:"
                        />

                    <TextField
                        ohos:id="$+id:upper_right_longitude_field"
                        ohos:height="match_parent"
                        ohos:width="0vp"
                        ohos:weight="1"
                        ohos:padding="5vp"
                        ohos:hint="0"
                        ohos:layout_alignment="horizontal_center"
                        ohos:text="0"
                        ohos:text_size="25"
                        />
                </DirectionalLayout>

                <Component
                    ohos:height="1vp"
                    ohos:width="match_parent"
                    ohos:background_element="#FF888888"/>
            </DirectionalLayout>
            <Text
                ohos:id="$+id:show_location"
                ohos:height="match_content"
                ohos:width="match_parent"
                ohos:layout_alignment="horizontal_center"
                ohos:margin="5vp"
                ohos:text_size="25"
                />
        </DirectionalLayout>
    </ScrollView>
</DirectionalLayout>